<% content_for :title, "Tasks" %>

<div>
  <%= link_to "Back to landing", root_path %>
</div>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="element">
      <%= render task %>
      <p>
        <%= link_to "Show this task", task %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
