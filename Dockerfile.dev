# Dockerfile ottimizzato per sviluppo
FROM ruby:3.2.0-slim

# Installa dipendenze per sviluppo
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    libpq-dev \
    postgresql-client \
    curl \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

WORKDIR /rails

# Copia e installa gems
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copia il codice
COPY . .

# Esponi porta
EXPOSE 3000

# Comando di default
CMD ["./bin/rails", "server", "-b", "0.0.0.0"]